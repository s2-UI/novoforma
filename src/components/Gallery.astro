---
import GalleryImage from '@/components/GalleryImage.astro'

import { projects } from '@/data/projects'
---

<section
  id='galeria'
  class='w-full py-12 md:py-24 lg:py-32'
>
  <div class='container mx-auto px-4 md:px-6'>
    <h2 class='text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl text-center mb-8'>
      Nuestra Galer√≠a de Proyectos
    </h2>
    <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4'>
      {
        projects.slice(0, 5).map(project => (
          <GalleryImage
            transition:name={`image-${project.slug}`}
            title={project.title}
            src={`/projects/${project.slug}/${project.cover}`}
            alt={project.alt}
            link={`/projects/${project.slug}`}
          />
        ))
      }
    </div>
  </div>
</section>
